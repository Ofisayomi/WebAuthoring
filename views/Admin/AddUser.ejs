<style>
    .controls span,
    .controls .glyphicon {
        font-size: large;
    }
    
    hr {
        background-color: blue;
    }
    
    .input-group,
    .btn {
        width: 50%;
        margin-left: 20%;
    }
</style>

<div class="col-md-offset-1" ng-controller="RegisterUserCtrl as ctrl">
    <br>

    <div name="frmTopic" style="padding-bottom: 30px;">
        <h4>Configure New User
        </h4>
        <div class="container-fluid boxtop">
            <label style="text-align:center;color:black;">{{ctrl.message}}</label>
            <form role="form" name="frmNewUser" method="POST" ng-submit="ctrl.SubmitUser()">
                <div class="input-group ">
                    <span class="input-group-addon ">
                <span class="glyphicon glyphicon-edit "></span>
                    </span>
                    <input type="text" class="form-control" ng-model="ctrl.user.lastname" name="txtSurname" id="txtSurname" placeholder="Surname" required>
                </div>
                <br>
                <div class="input-group ">
                    <span class="input-group-addon">
                <span class="glyphicon glyphicon-edit "></span>
                    </span>
                    <input type="text" class="form-control" name="txtFirstname" ng-model="ctrl.user.firstname" id="txtFirstname" placeholder="Firstname" required>
                </div>
                <br>
                <div class="input-group ">
                    <span class="input-group-addon">
                <span class="glyphicon glyphicon-edit"></span>
                    </span>
                    <input type="text" class="form-control" ng-model="ctrl.user.othername" name="txtOthernames" id="txtOthernames" placeholder="Othername">
                </div>
                <br>
                <div class="input-group ">
                    <span class="input-group-addon">
                <span class="glyphicon glyphicon-edit"></span>
                    </span>
                    <input type="number" class="form-control" ng-model="ctrl.user.txtPhone" name="txtPhone" id="txtPhone" placeholder="Phone Number" required>
                </div>
                <br>
                <div class="input-group ">
                    <span class="input-group-addon">
                <span class="glyphicon glyphicon-edit"></span>
                    </span>
                    <input type="email" class="form-control" ng-model="ctrl.user.email" name="txtEmail" id="txtEmail" placeholder="Email Address" required>
                </div>
                <br>
                <div class="input-group">
                    <select class="form-control" name="drpGender" ng-model="ctrl.user.drpGender" required>
                        <option value="Male">Male</option>
                        <option vale="Female">Female</option>
                    </select>
                </div>
                <br>
                <div class="input-group">
                    <select class="form-control" name="drpRole" ng-model="ctrl.user.drpRole" required>
                        <option value="Tutor">Tutor</option>
                        <option vale="Admin">Admin</option>
                    </select>
                </div>
                <br>
                <div class="input-group ">
                    <span class="input-group-addon ">
                        <span class="glyphicon glyphicon-edit"></span>
                    </span>
                    <input type="password" class="form-control" ng-model="ctrl.user.password" name="txtPassword" id="txtPassword" placeholder="Password" required>
                </div>
                <br>
                <div class="input-group">
                    <span class="input-group-addon ">
                        <span class="glyphicon glyphicon-edit"></span>
                    </span>
                    <input type="password" class="form-control" ng-model="ctrl.user.confirmpassword" name="txtConfirmPassword" id="txtConfirmPassword" placeholder="Confirm Password" required>
                </div>
                <br>
                <button ng-disabled="frmNewUser.$invalid" type="submit" value="Register" style="width:50%;" class="btn btn-info">
                <span class="glyphicon glyphicon-plus"></span> Register</button>
            </form>

        </div>
    </div>
</div>