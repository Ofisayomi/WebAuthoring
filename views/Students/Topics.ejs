    <style>
        .controls {
            width: 40%;
        }
        
        @media only screen and (max-width: 768px) {
            .controls {
                min-width: 100%;
            }
            /* Note that the parent will be relative while the child will be absolute
            sm: 768px
            xs:
            lg:1200
            md: 992
            
            */
            .sidebar {
                visibility: hidden;
                position: absolute;
            }
            .parents {
                position: relative;
            }
        }
        
        @media (min-width: 768px) {
            .controls {
                max-width: 720px;
            }
        }
        
        @media (min-width: 992px) {
            .controls {
                max-width: 960px;
            }
        }
        
        @media (min-width: 1200px) {
            .controls {
                max-width: 1140px;
            }
        }
    </style>

</head>

